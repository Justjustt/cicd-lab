pipeline {
    agent any
    
    tools {
        nodejs 'Node 7.8.0'
    }
    
    environment {
        DOCKERHUB_REPO = 'jus7'  // Replace with your Docker Hub username
        DOCKER_IMAGE_MAIN = "${DOCKERHUB_REPO}/cicd-lab-main:v1.0"
        DOCKER_IMAGE_DEV = "${DOCKERHUB_REPO}/cicd-lab-dev:v1.0"
        DOCKER_CREDENTIALS = 'dockerhub-credentials'
        PORT_MAIN = '3000'
        PORT_DEV = '3001'
    }
    
    stages {
        stage('Validate Branch') {
            steps {
                script {
                    echo "Building branch: ${env.BRANCH_NAME}"
                    
                    if (env.BRANCH_NAME != 'main' && env.BRANCH_NAME != 'dev') {
                        error("Invalid branch. Only 'main' and 'dev' branches are supported")
                    }
                }
            }
        }
        
        stage('Checkout SCM') {
            steps {
                echo "Checking out from branch: ${env.BRANCH_NAME}"
                checkout scm
            }
        }
        
        stage('Lint Dockerfile') {
            steps {
                echo "Linting Dockerfile with Hadolint..."
                sh 'hadolint Dockerfile || true'
            }
        }
        
        stage('Build') {
            steps {
                echo "Building Node.js application..."
                sh 'npm install'
            }
        }
        
        stage('Test') {
            steps {
                echo "Running tests..."
                sh 'npm test || true'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    def dockerImage
                    
                    if (env.BRANCH_NAME == 'main') {
                        dockerImage = env.DOCKER_IMAGE_MAIN
                    } else {
                        dockerImage = env.DOCKER_IMAGE_DEV
                    }
                    
                    echo "Building Docker image: ${dockerImage}"
                    sh "docker build -t ${dockerImage} ."
                }
            }
        }
        
        stage('Scan with Trivy') {
            steps {
                script {
                    def dockerImage
                    
                    if (env.BRANCH_NAME == 'main') {
                        dockerImage = env.DOCKER_IMAGE_MAIN
                    } else {
                        dockerImage = env.DOCKER_IMAGE_DEV
                    }
                    
                    echo "Scanning image with Trivy: ${dockerImage}"
                    
                    sh """
                        trivy image --severity HIGH,CRITICAL \
                            --format json \
                            --output trivy-report-${env.BRANCH_NAME}.json \
                            ${dockerImage} || true
                        
                        trivy image --severity HIGH,CRITICAL \
                            ${dockerImage} || true
                    """
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                script {
                    def dockerImage
                    
                    if (env.BRANCH_NAME == 'main') {
                        dockerImage = env.DOCKER_IMAGE_MAIN
                    } else {
                        dockerImage = env.DOCKER_IMAGE_DEV
                    }
                    
                    echo "Pushing image to Docker Hub: ${dockerImage}"
                    
                    withCredentials([usernamePassword(credentialsId: env.DOCKER_CREDENTIALS, usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh """
                            echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                            docker push ${dockerImage}
                            docker logout
                        """
                    }
                }
            }
        }
        
        stage('Stop Old Container') {
            steps {
                script {
                    def dockerImage
                    def port
                    
                    if (env.BRANCH_NAME == 'main') {
                        dockerImage = env.DOCKER_IMAGE_MAIN
                        port = env.PORT_MAIN
                    } else {
                        dockerImage = env.DOCKER_IMAGE_DEV
                        port = env.PORT_DEV
                    }
                    
                    echo "Stopping old container for ${dockerImage} on port ${port}..."
                    
                    sh """
                        CONTAINER_ID=\$(docker ps -q --filter "publish=${port}")
                        if [ ! -z "\$CONTAINER_ID" ]; then
                            echo "Stopping container: \$CONTAINER_ID"
                            docker stop \$CONTAINER_ID
                            docker rm \$CONTAINER_ID
                        else
                            echo "No running container found on port ${port}"
                        fi
                    """
                }
            }
        }
        
        stage('Deploy Container') {
            steps {
                script {
                    def dockerImage
                    def port
                    
                    if (env.BRANCH_NAME == 'main') {
                        dockerImage = env.DOCKER_IMAGE_MAIN
                        port = env.PORT_MAIN
                    } else {
                        dockerImage = env.DOCKER_IMAGE_DEV
                        port = env.PORT_DEV
                    }
                    
                    echo "Deploying ${dockerImage} on port ${port}..."
                    
                    sh """
                        docker run -d \
                            --name ${env.BRANCH_NAME}-app-${BUILD_NUMBER} \
                            --expose ${port} \
                            -p ${port}:3000 \
                            ${dockerImage}
                    """
                    
                    echo "✓ Deployment successful!"
                    echo "Access application at http://localhost:${port}"
                }
            }
        }
        
        stage('Verify Deployment') {
            steps {
                script {
                    def port
                    
                    if (env.BRANCH_NAME == 'main') {
                        port = env.PORT_MAIN
                    } else {
                        port = env.PORT_DEV
                    }
                    
                    echo "Waiting for application to start..."
                    sleep(time: 3, unit: 'SECONDS')
                    
                    sh """
                        echo "Checking if container is running on port ${port}..."
                        docker ps | grep ${env.BRANCH_NAME}-app-${BUILD_NUMBER}
                        echo "✓ Container is running!"
                    """
                }
            }
        }
        
        stage('Trigger Deployment Pipeline') {
            steps {
                script {
                    def pipelineName
                    
                    if (env.BRANCH_NAME == 'main') {
                        pipelineName = 'Deploy_to_main'
                    } else {
                        pipelineName = 'Deploy_to_dev'
                    }
                    
                    echo "Triggering ${pipelineName}..."
                    build job: pipelineName, wait: false
                }
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: "trivy-report-${env.BRANCH_NAME}.json", allowEmptyArchive: true
            echo "Pipeline execution completed for branch: ${env.BRANCH_NAME}"
        }
        success {
            echo "✓ ${env.BRANCH_NAME} environment deployed successfully!"
        }
        failure {
            echo "✗ Deployment failed for ${env.BRANCH_NAME} environment"
        }
    }
}
